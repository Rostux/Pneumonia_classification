<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".InfoActivity">
        <TextView
            android:id="@+id/pneumonia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is Pneumonia?"
            android:background="?attr/selectableItemBackground"
            style="@style/TextAppearance.AppCompat.Display1"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pneumonia_description"
            android:visibility="gone"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/pneumonia_description"
            android:textSize="18sp"
            android:fitsSystemWindows="true"
            android:paddingLeft="5dp"/>
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/instruction"
            android:text="How to use the app?"
            android:background="?attr/selectableItemBackground"
            style="@style/TextAppearance.AppCompat.Display1"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/instruction_description"
            android:visibility="gone"
            style="@style/TextAppearance.AppCompat.Body1"
            android:text="@string/instruction_description"
            android:textSize="18sp"
            android:fitsSystemWindows="true"
            android:paddingLeft="5dp"/>
    </LinearLayout>
</ScrollView>